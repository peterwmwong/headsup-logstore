gradient(c1,c2,pct1=0%,pct2=100%)
  background (c1/2)+(c2/2)

  //background -moz-linear-gradient(top, #1E5799 0%, #7db9e8 100%); /* firefox */
  background -moz-linear-gradient(top, c1 0%, c2 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(pct1,c1), color-stop(pct2,c2))
  filter "progid:DXImageTransform.Microsoft.gradient( startColorstr='%s', endColorstr='%s',GradientType=0 )" % (c1 c2)

hgradient(c1,c2,pct1=0%,pct2=100%)
  background (c1/2)+(c2/2)
  background -moz-linear-gradient(left, c1 pct1, c2 pct2)
  background linear-gradient(left, c1 pct1, c2 pct2)
  background -webkit-gradient(linear, left top, right top, color-stop(pct1,c1), color-stop(pct2,c2))

rad-gradient(c1,c2,x1,y1,x2,y2)
  background (c1/2)+(c2/2)
  background -webkit-radial-gradient(x1 y1, x2 y2, c1,c2)
  background -moz-radial-gradient(x1 y1, farthest-side, c1,c2)
